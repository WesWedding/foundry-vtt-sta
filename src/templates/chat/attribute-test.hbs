<div class="sta roll chat card" data-token-id="{{tokenId}}" data-speaker-id="{{speakerId}}">
  <div class="dice-roll collapsible">
    <div class="dice-result">
      <div class="dice-formula">
        <div class="dice-pool">{{dicePool}}d20</div>
        <div class="additional-info">
          <div class="target">{{localize "sta.roll.target"}}: {{checkTarget}}</div>
          <div class="range">{{localize "sta.roll.complicationrange"}}{{complicationMinimumValue}}</div>
        </div>
      </div>
      <div class="tooltip">
        <section class="tooltip-part collapsible-content">
          <div class="dice">
            <ol class="dice-rolls">{{{diceHtml}}}</ol>
          </div>
        </section>
      </div>
      {{{complicationHtml}}}
      <h4 class="dice-total">{{successText}}</h4>
    </div>
  </div>
  <div class="attribute">
    <button type="button" class="reroll-result">{{localize "sta.roll.rerollresults"}}</button>
    <input id="selectedAttribute" type="hidden" value="{{selectedAttribute}}">
    <input id="selectedAttributeValue" type="hidden" value="{{selectedAttributeValue}}">
    <input id="selectedDiscipline" type="hidden" value="{{selectedDiscipline}}">
    <input id="selectedDisciplineValue" type="hidden" value="{{selectedDisciplineValue}}">
  </div>
</div>