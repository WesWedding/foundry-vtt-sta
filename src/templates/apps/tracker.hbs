<div class="sta tracker-container">
  <div id="tracker-clickable" class="tracker-clickable">
    <i id="tracker-clickable-plus" class="fas fa-plus hide"></i>
    <i id="tracker-clickable-minus" class="fas fa-minus"></i>
  </div>
  <div id="sta-momentum-tracker" class="sta tracker momentum">
    <div class="header">
      {{localize 'sta.tracker.momentum'}}
    </div>
    <div class="button-group">
      <div id="sta-momentum-track-decrease" class="button decrease sta-impermitable">
        <i class="fas fa-minus"></i>
      </div>
      <div>
        <input type="text" class="input momentum-input" id="sta-track-momentum" data-dtype="Number" />
      </div>
      <div id="sta-momentum-track-increase" class="button increase sta-impermitable">
        <i class="fas fa-plus"></i>
      </div>
    </div>
  </div>
  <div id="sta-roll-task-button" class="button roll-task" title="{{localize 'sta.actor.attdis.task'}}">
    <i class="fa-solid fa-dice-d20"></i>
  </div>
  <div id="sta-roll-challenge-button" class="button roll-challenge" title="{{localize 'sta.actor.challenge.roll'}}">
    <i class="fa-solid fa-dice"></i>
  </div>
  <div id="sta-roll-npc-button" class="button roll-npc" title="{{localize 'sta.roll.npccrew'}}">
    <i class="fa-solid fa-starship"></i>
  </div>
  <div id="sta-threat-tracker" class="sta tracker threat">
    <div class="header">
      {{localize 'sta.tracker.threat'}}
    </div>
    <div class="button-group">
      <div id="sta-threat-track-decrease" class="button decrease sta-impermitable">
        <i class="fas fa-minus"></i>
      </div>
      <div>
        <input type="text" class="input threat-input" id="sta-track-threat" data-dtype="Number" />
      </div>
      <div id="sta-threat-track-increase" class="button increase sta-impermitable">
        <i class="fas fa-plus"></i>
      </div>
    </div>
  </div>
</div>